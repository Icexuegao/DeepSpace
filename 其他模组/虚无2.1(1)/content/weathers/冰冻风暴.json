{
  "name": "冰冻风暴"
  "type": "ParticleWeather"
  //粒子类天气
  "particleRegion": "particle"
  //粒子形状
  "drawNoise": false,
  //噪音
  "statusGround": true,
  //状态影响地面单位
  "useWindVector": true,
  //受风向影响
  "color": "#FFFFFF",
  //风沙颜色
  "sizeMin": 0.7,
  //最小尺寸
  "sizeMax": 7,
  //最大尺寸
  "minAlpha": 0.5,
  "maxAlpha": 1,
  "density": 800,
  //密度
  "baseSpeed": 1.2,
  //基础速度
  "force": 0.15,
  //力度？
  "duration": 7,
  //持续时间
  "sound": "windhowl"
  //音效
  "soundVol": 0,
  //音量
  "soundVolOscMag": 1.5,
  //最大音量
  "status": "freezing",
  "attrs": {
    "light": 0,
    //光照
    "water": 0.8,
    //潮湿
    "heat": -1.2,
    //热量
    "spores": 0
    //孢子
  }
}
//本文件放在content/weathers中